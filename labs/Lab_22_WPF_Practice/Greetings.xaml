<Window x:Class="Lab_22_WPF_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_22_WPF_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox_Question" HorizontalAlignment="Left" Height="23" Margin="237,148,0,0" TextWrapping="Wrap" Text="Is Engineering the worst or best group?" VerticalAlignment="Top" Width="323"/>
        <RadioButton x:Name="radioButton_Yes" Content="Yes" HorizontalAlignment="Left" Margin="237,251,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton_No" Content="No" HorizontalAlignment="Left" Margin="525,254,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.295,2.343" IsChecked="True"/>
        <Button x:Name="button_Confirm" Content="Confirm" HorizontalAlignment="Left" Margin="358,304,0,0" VerticalAlignment="Top" Width="75" Height="19" Click="button_Confirm_Click"/>

    </Grid>
</Window>
